# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /	                        controllers.Clientes.index()
POST	/login						controllers.Clientes.login()
GET		/rellenardb					controllers.Clientes.rellenarDb()
GET		/peliculas/:id 				controllers.Clientes.verPelicula(id: Long)
GET		/sesiones/:id				controllers.Clientes.verSesion(id: Long)
GET		/logout						controllers.Clientes.logout()
POST	/reservar					controllers.Clientes.reservarButaca()
GET		/tpvVirtual					controllers.Clientes.tpvVirtual()
POST	/cancelar					controllers.Clientes.cancelarReserva()

#Administracion

GET		/admin										controllers.Administracion.index()
GET		/admin/adminPeliculas						controllers.Administracion.adminPeliculas()
POST	/admin/adminPeliculas/nuevaPelicula			controllers.Administracion.nuevaPelicula()
POST	/admin/adminPeliculas/:id/editarPelicula	controllers.Administracion.editarPelicula(id: Long)
POST	/admin/adminPeliculas/:id/borrarPelicula	controllers.Administracion.borrarPelicula(id: Long)

GET		/admin/adminTipoSesion						controllers.Administracion.adminTipoSesion()
POST	/admin/adminTipoSesion/nuevoTipoSesion		controllers.Administracion.nuevoTipoSesion()
POST	/admin/adminTipoSesion/:id/editarTipoSesion	controllers.Administracion.editarTipoSesion(id: Long)
POST	/admin/adminTipoSesion/:id/borrarTipoSesion	controllers.Administracion.borrarTipoSesion(id: Long)

GET		/admin/adminSesiones						controllers.Administracion.adminSesiones()
GET		/admin/adminSesiones/:id/verSesionesPelicula	controllers.Administracion.getSesionesDePelicula(id: Long)
GET		/admin/adminSesiones/:id/verSesionesSala	controllers.Administracion.getSesionesDeSala(id: Long)

POST	/admin/adminSesiones/nuevaSesion			controllers.Administracion.nuevaSesion()
POST	/admin/adminSesiones/:id/editarTipoSesion	controllers.Administracion.editarSesion(id: Long)
POST	/admin/adminSesiones/:id/borrarSesion	    controllers.Administracion.borrarSesion(id: Long)

GET		/admin/login								controllers.Administracion.irALogin()
POST	/admin/login/dologin						controllers.Administracion.doLogin()

#Taquilla

GET		/taquilla					controllers.Taquilla.index()
GET		/taquilla/login				controllers.Taquilla.irALogin()
POST	/taquilla/login/dologin		controllers.Taquilla.doLogin()
POST	/taquilla/verSesiones/:id	controllers.Taquilla.verSesiones(id: Long)
GET		/taquilla/sesiones/:id		controllers.Taquilla.verSesionTaquilla(id: Long)
POST	/taquilla/reservar			controllers.Taquilla.reservarButacaTaquilla()
GET		/taquilla/reservaRealizada	controllers.Taquilla.reservaRealizada()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
